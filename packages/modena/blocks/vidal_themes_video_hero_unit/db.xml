<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd"
>

  <table name="btVidalThemesVideoHeroUnit">
    <field name="bID" type="integer">
      <unsigned/>
      <key/>
    </field>
    <field name="heroUnitHeading" type="string" size="255"/>
    <field name="heroUnitContent" type="text"/>
    <field name="videoBackground" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="videoBackgroundBackup" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="contentAlignment" type="string" size="255"/>
    <field name="linkPicker" type="string" size="255"/>
    <field name="buttonType" type="string" size="255"/>
    <field name="buttonColors" type="string" size="255"/>
    <field name="buttonRadius" type="string" size="255"/>
    <field name="buttonAnimation" type="string" size="255"/>
    <field name="buttonIcons" type="string" size="100"/>
    <field name="headingAnimation" type="string" size="255"/>
    <field name="contentAnimation" type="string" size="255"/>
    <field name="heroUnitBottomMargin" type="string" size="255"/>
    <field name="posterImage" type="integer">
      <unsigned/>
      <default value="0"/>
    </field>
    <field name="buttonUrl" type="integer"/>
    <field name="buttonUrl_text" type="string" size="255"/>
    <field name="externalLink" type="string" size="255"/>
    <field name="externalLink_text" type="string" size="255"/>
    <field name="loopVideo" type="string" size="1">
      <unsigned/>
    </field>
    <field name="muteVideo" type="string" size="1">
      <unsigned/>
    </field>
  </table>

</schema>
